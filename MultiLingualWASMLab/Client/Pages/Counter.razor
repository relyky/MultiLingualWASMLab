@page "/counter"
@inject ILogger<Counter> logger
@inject IStringLocalizer<Counter> loc

<PageTitle>Counter</PageTitle>

<MudContainer>
  <MudText Typo=Typo.h3>Counter</MudText>
  <MudText>Current count: @currentCount</MudText>
  <MudButton Variant=Variant.Filled Color=Color.Primary OnClick=IncrementCount>@loc["Click me"]</MudButton>

  <MudAlert Severity=Severity.Normal>
    <span style="font-size:2em">@( $"click {currentCount} times")</span> 
  </MudAlert>

  <MudAlert Severity=Severity.Info>
    <span style="font-size:2em">@String.Format(loc["click {0} times"], currentCount)</span>
  </MudAlert>

</MudContainer>

@code {
  int currentCount = 0;

  void IncrementCount()
  {
    currentCount++;
    logger.LogInformation("IncrementCount");
  }
}
